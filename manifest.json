{
  // TODO: Migrate to Manifest V3
    "manifest_version": 2,
    "name": "Tabs Copier",
    "version": "0.1",
    "homepage_url": "https://github.com/TheKiromen/TabsCopierExtension",
    "description": "This extension lets you copy links of multiple open tabs to clipboard at once.",
  
    "icons": {
      "64": "icons/icon.png"
    },
    "browser_action": {
      "default_icon": {
        "64": "icons/icon.png"
      }
    },
  
    "permissions": ["tabs", "clipboardWrite", "contextMenus", "menus"],

    "background": {
      "scripts": ["copier.js"]
    },
    "content_scripts": []
}
  